{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "ResumeOptions",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "colors": {
      "$ref": "#/definitions/ResumeColors"
    },
    "contact": {
      "$ref": "#/definitions/ContactInforation"
    },
    "image": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "mainText": {
      "type": "string"
    },
    "workItems": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/WorkItem"
      }
    },
    "skills": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "definitions": {
    "ResumeColors": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "main": {
          "type": "string"
        },
        "mainTextColor": {
          "type": "string"
        },
        "background": {
          "type": "string"
        }
      }
    },
    "ContactInforation": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "address": {
          "type": "string"
        }
      }
    },
    "WorkItem": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "place": {
          "type": "string"
        },
        "from": {
          "type": "string",
          "format": "date"
        },
        "to": {
          "type": [
            "null",
            "string"
          ],
          "format": "date"
        },
        "items": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}